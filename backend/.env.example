# ShivBAS Backend Environment Configuration
# Copy this file to .env and update with actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=shivbas_db

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=development
SERVER_PORT=5000
SERVER_HOST=localhost

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# ============================================================================
# PASSWORD RESET
# ============================================================================
PASSWORD_RESET_TOKEN_EXPIRY=30m

# ============================================================================
# PASSWORD VALIDATION RULES
# ============================================================================
MIN_LOGIN_ID_LENGTH=6
MAX_LOGIN_ID_LENGTH=12
MIN_PASSWORD_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_SPECIAL_CHAR=true

# ============================================================================
# EMAIL CONFIGURATION (for password reset - optional for hackathon)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@shivbas.com

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN=http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=debug
LOG_FORMAT=combined

# ============================================================================
# HACKATHON MODE
# ============================================================================
HACKATHON_MODE=true
SKIP_EMAIL_VERIFICATION=true
